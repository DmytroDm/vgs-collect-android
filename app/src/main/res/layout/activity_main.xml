<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/verticalPanel"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:progressTint="@color/colorAccent"
            android:visibility="invisible"/>

        <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
            android:id="@+id/cardNumberFieldLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:hint="Credit card number">
            <com.verygoodsecurity.vgscollect.widget.VGSEditText
                android:id="@+id/cardNumberField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aliasName="cardNumber"
                app:isRequired="false"
                app:textColor="@color/black"
                app:singleLine="true"
                app:textSize="12dp"
                app:text="4111111111111111"
                app:fieldType="cardNumber"/>
        </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

        <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
            android:id="@+id/cardCVCFieldLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:hint="@string/cvc">
            <com.verygoodsecurity.vgscollect.widget.VGSEditText
                android:id="@+id/cardCVCField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aliasName="cvcNum"
                app:textColor="@color/black"
                app:isRequired="true"
                app:singleLine="true"
                app:textSize="12dp"
                app:text="123"
                app:fieldType="cardCVCNumber"/>
        </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
        <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
            android:id="@+id/cardHolderFieldLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:hint="@string/card_holder">
            <com.verygoodsecurity.vgscollect.widget.VGSEditText
                android:id="@+id/cardHolderField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aliasName="holder"
                app:textColor="@color/black"
                app:singleLine="true"
                app:isRequired="true"
                app:textSize="12dp"
                app:fieldType="cardOwner"
                app:text="Linda Hamilton"/>
        </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
        <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
            android:id="@+id/cardExpDateFieldLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:hint="@string/exp_date">
            <com.verygoodsecurity.vgscollect.widget.VGSEditText
                android:id="@+id/cardExpDateField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aliasName="expDate"
                app:textColor="@color/black"
                app:textSize="12dp"
                app:singleLine="true"
                app:isRequired="true"
                app:text="05/25"
                app:fieldType="cardDate"/>
        </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

        <Button
            android:id="@+id/sendGet"
            android:text="get"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sendPost"
            android:text="post"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin">
            <TextView
                android:id="@+id/responseView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="no data"/>
        </FrameLayout>
    </ScrollView>

</LinearLayout>