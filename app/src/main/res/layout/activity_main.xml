<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:progressTint="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/half_default_margin"
        android:paddingEnd="@dimen/half_default_margin"
        android:text="@string/demo_description"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/verticalPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/state">

            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardNumberFieldLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Card number"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin">
                <com.verygoodsecurity.vgscollect.widget.VGSCardNumberEditText
                    android:id="@+id/cardNumberField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:numberDivider="-"
                    app:fieldName="cardNumber"
                    app:isRequired="false"
                    app:textColor="@color/black"
                    app:singleLine="true"
                    app:textSize="7dp"
                    app:text="4111111111111111"
                    app:cardBrandIconGravity="end"
                    app:fieldType="cardNumber"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardCVCFieldLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="@string/cvc">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardCVCField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="cardCvc"
                    app:textColor="@color/black"
                    app:isRequired="true"
                    app:singleLine="true"
                    app:textSize="12dp"
                    app:text="123"
                    app:fieldType="cvc"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardHolderFieldLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="@string/card_holder">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardHolderField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="cardHolder"
                    app:textColor="@color/black"
                    app:singleLine="true"
                    app:inputType="text"
                    app:isRequired="true"
                    app:textSize="12dp"
                    app:fieldType="cardHolderName"
                    app:text="John Galt"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardExpDateFieldLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="@string/exp_date">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardExpDateField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="expDate"
                    app:textColor="@color/black"
                    app:textSize="12dp"
                    app:singleLine="true"
                    app:isRequired="true"
                    app:text="05/25"
                    app:fieldType="expDate"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

            <Button
                android:id="@+id/submitBtn"
                android:text="Submit"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/verticalPanelRtl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verticalPanel">

            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardNumberFieldLayRtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                app:hint="ا ل خاص"
                android:layout_marginEnd="@dimen/default_margin">
                <com.verygoodsecurity.vgscollect.widget.VGSCardNumberEditText
                    android:id="@+id/cardNumberFieldRtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:numberDivider="-"
                    app:fieldName="cardNumber"
                    app:isRequired="false"
                    app:textColor="@color/black"
                    app:singleLine="true"
                    app:textSize="7dp"
                    app:text="4111111111111111"
                    app:cardBrandIconGravity="end"
                    app:fieldType="cardNumber"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardCVCFieldLayRtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="الخاص">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardCVCFieldRtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="cardCvc"
                    app:textColor="@color/black"
                    app:isRequired="true"
                    app:singleLine="true"
                    app:textSize="12dp"
                    app:text="123"
                    app:fieldType="cvc"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardHolderFieldLayRtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="@string/card_holder">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardHolderFieldRtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="cardHolder"
                    android:textDirection="ltr"
                    app:textColor="@color/black"
                    app:singleLine="true"
                    app:inputType="text"
                    app:isRequired="true"
                    app:textSize="12dp"
                    app:fieldType="cardHolderName"
                    app:text="John Galt"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>
            <com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout
                android:id="@+id/cardExpDateFieldLayRtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:hint="@string/exp_date">
                <com.verygoodsecurity.vgscollect.widget.VGSEditText
                    android:id="@+id/cardExpDateFieldRtl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fieldName="expDate"
                    app:textColor="@color/black"
                    app:textSize="12dp"
                    app:singleLine="true"
                    app:isRequired="true"
                    app:text="05/25"
                    app:fieldType="expDate"/>
            </com.verygoodsecurity.vgscollect.widget.VGSTextInputLayout>

            <Button
                android:id="@+id/submitBtnRtl"
                android:text="Submit"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verticalPanel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/default_margin">
            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingBottom="@dimen/half_default_margin"
                android:text="STATE: "/>
            <ImageView
                android:id="@+id/cardIcon"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/responseView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="no data"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>